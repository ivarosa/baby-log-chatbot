{
  "build": {
    "builder": "nixpacks"
  },
  "deploy": {
    "startCommand": "python main.py",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "environment": {
    "ENVIRONMENT": "production",
    "LOG_LEVEL": "INFO",
    "LOG_JSON": "false"
  }
}
